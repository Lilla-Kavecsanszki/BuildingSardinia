@*
  Contact page view.
*@

@using BuildingSardinia.Models

@model BuildingSardinia.Models.ContactForm

@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="@Url.Content("~/css/contact.css")" />
}

<div class="container">
    <h1>Contact Us</h1>

    <!-- Contact Form -->
    <div class="contact-form">
        <form action="/Contact/SendMessage" method="post">
            <!-- Name Field -->
            <div class="form-group">
                <label for="Name">Name</label>
                <input id="Name" name="Name" type="text" class="form-control" />
                <!-- Error message placeholder (you can use server-side or client-side validation here) -->
                <span class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-group">
                <label for="Email">Email</label>
                <input id="Email" name="Email" type="email" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!-- Subject Field -->
            <div class="form-group">
                <label for="Subject">Subject</label>
                <input id="Subject" name="Subject" type="text" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!-- Message Field -->
            <div class="form-group">
                <label for="Message">Message</label>
                <textarea id="Message" name="Message" class="form-control"></textarea>
                <span class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>

    <!-- Office Information and Map Wrapper -->
    <div class="contact-details-map-wrapper">
        <!-- Office Information -->
        <div class="contact-details">
            <h2>Our Office</h2>
            <p><strong>Address:</strong> Via Roma 123, 09170 Oristano, Sardinia, Italy</p>
            <p><strong>Telephone:</strong> +39 0783 123456</p>
            <p><strong>Email:</strong> info@building-sardinia.com</p>
        </div>

        <!-- Map -->
        <div class="map-container">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12295.861012167078!2d8.584981053678788!3d39.904419265225036!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12c4bfc1cf0f55b3%3A0xeaa37d7796b71c16!2sVia%20Roma%2C%20123%2C%2009170%20Oristano%20OR%2C%20Italy!5e0!3m2!1sen!2sus!4v1616665790838!5m2!1sen!2sus"
                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</div>
